{
    "id": "org.kde.kongress",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "kongress",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.Solid.PowerManagement",
        "--own-name=org.kde.kongressac"
    ],
    "modules": [
        {
            "name": "kcalendarcore",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.76/kcalendarcore-5.76.0.tar.xz",
                    "sha256": "e6fd390b8ba2a899e7abda3de8d9ab7e5155fede6bbee9ca2b302b931a0232ae"
                }
            ],
            "modules": [
                {
                    "name": "libical",
                    "buildsystem": "cmake-ninja",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/libical/libical/releases/download/v3.0.8/libical-3.0.8.tar.gz",
                            "sha256": "09fecacaf75ba5a242159e3a9758a5446b5ce4d0ab684f98a7040864e1d1286f"
                        }
                    ],
                    "cleanup": [
                        "/share/gtk-doc"
                    ]
                }
            ]
        },
        {
            "name": "kongress",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kongress/1.0/kongress-1.0.tar.xz",
                    "sha256": "b12371deceb2fc5580d235f43f299ad08996adb922395f7fb5f8c03213deef82"
                }
            ]
        }
    ]
}

